pattern_match() = {

  fib(n) = {
    n match {
    | 0 ; 0;
    | 1 ; -1;
    | n ; fib(n-2) + fib(n-1);
    }
  }

  printf("fib 21 %d\n" fib(21))
} pattern_match()


parcial_function() = {

  def fib = {
    | 0; a=1 a;
    | 1; 1;
    | n; fib(n-2) + fib(n-1);
  }
  
  printf("fib 10 = %d\n" fib(10))
  
  llor = {
    | 0,0 ; a=1 b=2 a + b;
    | a,b ; a + b
  }

  printf("llor %d\n" llor(1,2))
  
} parcial_function()
